<!-- Slider main container -->
<div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide">
              <div class="parallax-bg">
              <%= image_tag(@travel.image1, class: "article-image") %>
              </div>
              <div class="title" data-swiper-parallax="-100"><%= @travel.title_slide %></div>
                <div class="subtitle" data-swiper-parallax="-200">
                  <%= @travel.description_slide %>
                </div>
                <div class="text" data-swiper-parallax="-300">
                   <%= @travel.content_slide %>
                </div>
                
        </div>

        <div class="swiper-slide">
        <div class="parallax-bg">
          <%= image_tag(@travel.image2, class: "article-image") %>
        </div>
          <div class="title" data-swiper-parallax="-100">
          <%= @travel.title_slide2 %>
          </div>
                <div class="subtitle" data-swiper-parallax="-200">
                <%= @travel.description_slide2 %>
                </div>
                <div class="text" data-swiper-parallax="-300">
                  <%= @travel.content_slide2 %>
                </div>
        </div>

        <div class="swiper-slide">
        <div class="parallax-bg">
        <%= image_tag(@travel.image3, class: "article-image") %>
        </div>
          <div class="title" data-swiper-parallax="-100">
          <%= @travel.title_slide3 %>
          </div>
          <div class="subtitle" data-swiper-parallax="-200">
           <%= @travel.description_slide3 %>
          </div>
               <div class="text" data-swiper-parallax="-300">
                   <%= @travel.content_slide3 %>
                </div>
        </div>

        <div class="swiper-slide">
        <div class="parallax-bg">
        <%= image_tag(@travel.image4, class: "article-image") %>
        </div>
          <div class="title" data-swiper-parallax="-100">
           <%= @travel.title_slide4 %>
          </div>
          <div class="subtitle" data-swiper-parallax="-200">
           <%= @travel.description_slide4 %>
          </div>
               <div class="text" data-swiper-parallax="-300">
                   <%= @travel.content_slide4 %>
                </div>
        </div>

    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>
    
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    
    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar"></div>
</div>